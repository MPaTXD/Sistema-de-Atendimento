            <input id="btnSubmit" type="submit" value="submit" />
        </form>
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="oPessoaF.Nome" class="control-label"></label>
                <input asp-for="oPessoaF.Nome" class="form-control" />
                <span asp-validation-for="oPessoaF.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="oPessoaF.Cpf" class="control-label"></label>
                <input asp-for="oPessoaF.Cpf" class="form-control" />
                <span asp-validation-for="oPessoaF.Cpf" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="oPessoaF.DNascimento" class="control-label"></label>
                <input asp-for="oPessoaF.DNascimento" class="form-control" />
                <span asp-validation-for="oPessoaF.DNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
