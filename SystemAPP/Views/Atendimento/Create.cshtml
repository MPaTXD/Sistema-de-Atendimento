@model Entites.ViewModel.AtendimentoViewModel
@using Entites.Enums


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Atendimento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Atendimento" asp-action="GetTipoFormulario" method="post">
